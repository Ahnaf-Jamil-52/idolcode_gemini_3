{
  "name": "idolcode",
  "displayName": "Idolcode",
  "description": "Follow your coding idol's problem-solving journey on Codeforces",
  "version": "1.0.0",
  "publisher": "idolcode",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "idolcode-sidebar",
          "title": "Idolcode",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "idolcode-sidebar": [
        {
          "type": "webview",
          "id": "idolcode-panel",
          "name": "Idolcode"
        }
      ]
    },
    "commands": [
      {
        "command": "idolcode.logout",
        "title": "Idolcode: Logout"
      },
      {
        "command": "idolcode.changeIdol",
        "title": "Idolcode: Change Idol"
      }
    ],
    "configuration": {
      "title": "Idolcode",
      "properties": {
        "idolcode.backendUrl": {
          "type": "string",
          "default": "http://0.0.0.0:8000",
          "description": "Backend API URL for Idolcode"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "mongodb": "^7.1.0"
  }
}
